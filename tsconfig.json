{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "web3bio-profile-kit/types": [
        "./node_modules/web3bio-profile-kit/dist/types"
      ],
      "web3bio-profile-kit/utils": [
        "./node_modules/web3bio-profile-kit/dist/utils"
      ],
      "web3bio-profile-kit/hooks": [
        "./node_modules/web3bio-profile-kit/dist/hooks"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
